{% extends 'base.html.twig' %}

{% block body %}
    {% form_theme form 'bootstrap_5_layout.html.twig' %}
    {{ form(form) }}

    {% if search is not null %}
        <p>Votre recherche : <b>{{ search }}</b></p>
    {% endif %}

    {% if cities is not null %}
        <ul>
            {%  for city in cities %}
                <li><a href="{{ path('app_city', {'name': city.name}) }}">{{  city.name }} ({{ city.nomDepartemement }} - {{ city.region }})</a></li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}